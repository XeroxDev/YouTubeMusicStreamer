<div class="field has-addons">
    <div class="control is-expanded">
        <div class="select is-fullwidth">
            @if (twitchService.Rewards.Count == 0)
            {
                <option value="" disabled>No custom rewards found</option>
            }
            else
            {
                <select @bind="Value">
                    <option value="">Disabled</option>
                    @foreach (var reward in twitchService.Rewards)
                    {
                        <option @key="reward.Id" value="@reward.Id">@reward.Title</option>
                    }
                </select>
            }
        </div>
    </div>
    <div class="control">
        <button type="submit" class="button is-primary @(_refreshing ? "is-loading" : "")" @onclick="ReloadRewards" disabled="@_refreshing">
            Reload
        </button>
    </div>
</div>